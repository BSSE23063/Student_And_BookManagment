<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Student Records</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f5f7fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar {
      background: linear-gradient(to right, #28a745, #218838);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .table-container {
      background-color: white;
      border-radius: 20px;
      padding: 30px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      margin-top: 60px;
    }

    h2 {
      color: #2f4f4f;
      margin-bottom: 30px;
    }

    th {
      background-color: #28a745 !important;
      color: white !important;
    }

    td {
      background-color: #ffffff;
    }

    .navbar-brand img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
      border-radius: 50%;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/logo.jpg" alt="Logo">
        Students&Books Management System
      </a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/record">Add Student Record</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/record/view">View Student Records</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container table-container">
    <h2 class="text-center">Orders Record</h2>

    <% if (records && records.length > 0) { %>
      <% records.forEach(record => { %>
        <div class="mb-5">
          <h5><strong>Name:</strong> <%= record.name %></h5>
          <p><strong>Email:</strong> <%= record.email %></p>
          <p><strong>Roll Number:</strong> <%= record.rollnumber %></p>

          <% if (record.purchase && record.purchase.length > 0) { %>
            <table class="table table-bordered text-center">
              <thead>
                <tr>
                  <th>Book Title</th>
                  <th>Year</th>
                </tr>
              </thead>
              <tbody>
                <% record.purchase.forEach(book => { %>
                  <tr>
                    <td><%= book.title %></td>
                    <td><%= book.year %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-muted">No books ordered.</p>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center text-muted">No student records found.</p>
    <% } %>

  </div>

</body>
</html>
