<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Orders - Book Issuance Records</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #28a745 0%, #218838 100%);
      --secondary-gradient: linear-gradient(135deg, #38f9d7 0%, #43e97b 100%);
      --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      --glass-bg: rgba(255, 255, 255, 0.95);
      --shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #e4efe9 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
      padding-top: 80px;
    }

    /* Navigation */
    .navbar-glass {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      padding: 1rem 0;
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
    }

    .nav-brand {
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 1.5rem;
    }

    .nav-brand img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
      border-radius: 50%;
      object-fit: cover;
    }

    .nav-link {
      color: #4a5568 !important;
      font-weight: 500;
      padding: 0.5rem 1rem !important;
      border-radius: 12px;
      margin: 0 0.25rem;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      background: var(--primary-gradient);
      color: white !important;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .nav-link.active {
      background: var(--primary-gradient);
      color: white !important;
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    /* Header Section */
    .header-section {
      text-align: center;
      margin-bottom: 3rem;
      padding: 2rem 0;
      position: relative;
    }

    .header-section::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 300px;
      height: 300px;
      background: var(--primary-gradient);
      opacity: 0.05;
      border-radius: 50%;
      z-index: -1;
    }

    .header-title {
      font-size: 3rem;
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
    }

    .header-subtitle {
      color: #718096;
      font-size: 1.2rem;
      max-width: 600px;
      margin: 0 auto;
    }

    .orders-icon {
      width: 80px;
      height: 80px;
      background: var(--primary-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      color: white;
      font-size: 2rem;
      box-shadow: 0 10px 30px rgba(40, 167, 69, 0.3);
    }

    /* Orders Container */
    .orders-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem 4rem;
    }

    /* Student Card */
    .student-card {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border-radius: 25px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      box-shadow: var(--shadow);
      border: 1px solid rgba(255, 255, 255, 0.2);
      transform: translateY(0);
      transition: all 0.3s ease;
      opacity: 0;
      animation: slideIn 0.6s ease forwards;
    }

    .student-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
    }

    .student-header {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid rgba(40, 167, 69, 0.1);
    }

    .student-avatar {
      width: 70px;
      height: 70px;
      background: var(--primary-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.8rem;
      font-weight: 600;
      box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
    }

    .student-info {
      flex: 1;
    }

    .student-name {
      font-size: 1.5rem;
      font-weight: 700;
      color: #1e293b;
      margin-bottom: 0.25rem;
    }

    .student-details {
      display: flex;
      gap: 1.5rem;
      color: #64748b;
      flex-wrap: wrap;
    }

    .student-detail {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.95rem;
    }

    .student-detail i {
      color: #28a745;
    }

    .books-count {
      background: var(--warning-gradient);
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      font-weight: 600;
      font-size: 1.1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      box-shadow: 0 4px 15px rgba(240, 147, 251, 0.3);
    }

    /* Books Table */
    .books-section {
      margin-top: 2rem;
    }

    .section-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #2d3748;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .books-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .books-table th {
      background: var(--primary-gradient);
      color: white;
      font-weight: 600;
      text-align: left;
      padding: 1.25rem 1.5rem;
      border: none;
    }

    .books-table th:first-child {
      border-top-left-radius: 15px;
    }

    .books-table th:last-child {
      border-top-right-radius: 15px;
    }

    .books-table td {
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid #f1f5f9;
      vertical-align: middle;
    }

    .books-table tr:last-child td {
      border-bottom: none;
    }

    .books-table tr:last-child td:first-child {
      border-bottom-left-radius: 15px;
    }

    .books-table tr:last-child td:last-child {
      border-bottom-right-radius: 15px;
    }

    .books-table tbody tr {
      transition: all 0.2s ease;
    }

    .books-table tbody tr:hover {
      background: #f8fafc;
      transform: translateX(5px);
    }

    .book-info {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .book-icon {
      width: 40px;
      height: 40px;
      background: var(--secondary-gradient);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.2rem;
    }

    .book-title {
      font-weight: 600;
      color: #1e293b;
      margin-bottom: 0.25rem;
    }

    .book-author {
      color: #64748b;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .year-badge {
      background: var(--primary-gradient);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      font-weight: 600;
      font-size: 0.9rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .issued-date {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #64748b;
      font-size: 0.9rem;
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.9) 100%);
      border-radius: 20px;
      border: 2px dashed #cbd5e1;
      margin: 2rem auto;
      max-width: 600px;
    }

    .empty-icon {
      font-size: 4rem;
      color: #cbd5e1;
      margin-bottom: 1.5rem;
    }

    .empty-state h3 {
      color: #64748b;
      margin-bottom: 0.5rem;
    }

    .empty-state p {
      color: #94a3b8;
      margin-bottom: 1.5rem;
      max-width: 400px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Action Buttons */
    .action-buttons {
      display: flex;
      gap: 0.75rem;
      justify-content: flex-end;
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(40, 167, 69, 0.1);
    }

    .action-btn {
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: 0.95rem;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      border: none;
    }

    .print-btn {
      background: white;
      color: #4a5568;
      border: 2px solid #e2e8f0;
    }

    .print-btn:hover {
      background: #f8fafc;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .assign-btn {
      background: var(--primary-gradient);
      color: white;
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .assign-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
    }

    /* Stats Summary */
    .stats-summary {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border-radius: 20px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: var(--shadow);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
    }

    .stat-item {
      text-align: center;
      padding: 1.5rem;
      background: white;
      border-radius: 15px;
      border: 1px solid #e2e8f0;
      transition: all 0.3s ease;
    }

    .stat-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .stat-number {
      font-size: 2.5rem;
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      color: #64748b;
      font-size: 0.9rem;
      font-weight: 600;
    }

    /* Animations */
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    /* Responsive */
    @media (max-width: 768px) {
      body {
        padding-top: 70px;
      }
      
      .header-title {
        font-size: 2.2rem;
      }
      
      .student-header {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
      }
      
      .student-details {
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
      }
      
      .books-table {
        font-size: 0.9rem;
      }
      
      .books-table th,
      .books-table td {
        padding: 1rem;
      }
      
      .action-buttons {
        flex-direction: column;
      }
      
      .action-btn {
        width: 100%;
        justify-content: center;
      }
      
      .stats-grid {
        grid-template-columns: 1fr;
      }
    }

    /* Print Styles */
    @media print {
      .navbar-glass,
      .action-buttons,
      .stats-summary {
        display: none !important;
      }
      
      .student-card {
        box-shadow: none !important;
        border: 1px solid #ddd !important;
        page-break-inside: avoid;
      }
      
      body {
        background: white !important;
        padding-top: 0 !important;
      }
    }
  </style>
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-glass">
    <div class="container">
      <a class="navbar-brand nav-brand d-flex align-items-center" href="/">
        <img src="/images/logo.jpg" alt="Logo">
        Students & Books Management System
      </a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-home me-1"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/record">
              <i class="fas fa-user-plus me-1"></i> Add Student
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/book">
              <i class="fas fa-book me-1"></i> Add Book
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/record/view">
              <i class="fas fa-users me-1"></i> View Students
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/record/order">
              <i class="fas fa-clipboard-list me-1"></i> View Orders
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/info">
              <i class="fas fa-search me-1"></i> Search Books
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Header Section -->
  <div class="container">
    <div class="header-section">
      <div class="orders-icon">
        <i class="fas fa-clipboard-check"></i>
      </div>
      <h1 class="header-title">Book Issuance Records</h1>
      <p class="header-subtitle">
        View and manage all book assignments, track borrowing history, and monitor library usage
      </p>
    </div>
  </div>

  <!-- Orders Container -->
  <div class="orders-container">
    <!-- Stats Summary -->
    <% if (locals.records && records.length > 0) { %>
      <% 
        let totalStudents = records.length;
        let totalBooks = 0;
        let studentsWithBooks = 0;
        
        records.forEach(record => {
          if (record.purchase && record.purchase.length > 0) {
            totalBooks += record.purchase.length;
            studentsWithBooks++;
          }
        });
      %>
      
      <div class="stats-summary animate__animated animate__fadeIn">
        <div class="stats-grid">
          <div class="stat-item">
            <div class="stat-number"><%= totalStudents %></div>
            <div class="stat-label">Total Students</div>
          </div>
          <div class="stat-item">
            <div class="stat-number"><%= totalBooks %></div>
            <div class="stat-label">Books Issued</div>
          </div>
          <div class="stat-item">
            <div class="stat-number"><%= studentsWithBooks %></div>
            <div class="stat-label">Students with Books</div>
          </div>
          <div class="stat-item">
            <div class="stat-number"><%= Math.round((studentsWithBooks / totalStudents) * 100) || 0 %>%</div>
            <div class="stat-label">Engagement Rate</div>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Student Records -->
    <% if (locals.records && records.length > 0) { %>
      <% records.forEach(function(record, index) { %>
        <% if (record.purchase && record.purchase.length > 0) { %>
          <div class="student-card" style="animation-delay: 0.1s">
            <div class="student-header">
              <div class="student-avatar">
                <%= record.name.charAt(0).toUpperCase() %>
              </div>
              
              <div class="student-info">
                <h3 class="student-name"><%= record.name %></h3>
                <div class="student-details">
                  <div class="student-detail">
                    <i class="fas fa-envelope"></i>
                    <span><%= record.email %></span>
                  </div>
                  <div class="student-detail">
                    <i class="fas fa-id-card"></i>
                    <span><%= record.rollnumber %></span>
                  </div>
                  <div class="student-detail">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Joined: <%= new Date(record.createdAt || Date.now()).toLocaleDateString() %></span>
                  </div>
                </div>
              </div>
              
              <div class="books-count">
                <i class="fas fa-book"></i>
                <%= record.purchase.length %> Books
              </div>
            </div>

            <div class="books-section">
              <h4 class="section-title">
                <i class="fas fa-book-open text-success"></i>
                Books Issued to <%= record.name %>
              </h4>
              
              <div class="table-responsive">
                <table class="books-table">
                  <thead>
                    <tr>
                      <th>Book Details</th>
                      <th>Author</th>
                      <th>Year</th>
                      <th>Issue Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% record.purchase.forEach(function(book) { %>
                      <tr>
                        <td>
                          <div class="book-info">
                            <div class="book-icon">
                              <i class="fas fa-book"></i>
                            </div>
                            <div>
                              <div class="book-title"><%= book.title %></div>
                              <div class="book-author">
                                <i class="fas fa-user-edit"></i>
                                <%= book.author %>
                              </div>
                            </div>
                          </div>
                        </td>
                        <td><%= book.author %></td>
                        <td>
                          <span class="year-badge">
                            <i class="fas fa-calendar"></i>
                            <%= book.year %>
                          </span>
                        </td>
                        <td>
                          <div class="issued-date">
                            <i class="fas fa-calendar-day"></i>
                            <%= new Date().toLocaleDateString() %>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>

            <div class="action-buttons">
              <button class="btn action-btn print-btn" onclick="printOrder('<%= record.rollnumber %>')">
                <i class="fas fa-print"></i>
                Print Record
              </button>
              <button class="btn action-btn assign-btn" onclick="assignMoreBooks('<%= record.rollnumber %>')">
                <i class="fas fa-plus-circle"></i>
                Assign More Books
              </button>
            </div>
          </div>
        <% } %>
      <% }); %>
      
      <!-- Students without books -->
      <% 
        const studentsWithoutBooks = records.filter(record => !record.purchase || record.purchase.length === 0);
        if (studentsWithoutBooks.length > 0) { 
      %>
        <div class="student-card">
          <div class="student-header">
            <div class="student-avatar" style="background: #e2e8f0; color: #64748b;">
              <i class="fas fa-user-slash"></i>
            </div>
            
            <div class="student-info">
              <h3 class="student-name">Students Without Books</h3>
              <div class="student-details">
                <div class="student-detail">
                  <i class="fas fa-users"></i>
                  <span><%= studentsWithoutBooks.length %> students have no books assigned</span>
                </div>
              </div>
            </div>
          </div>

          <div class="books-section">
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle me-2"></i>
              The following students have not been assigned any books yet.
            </div>
            
            <div class="row">
              <% studentsWithoutBooks.forEach(function(student) { %>
                <div class="col-md-4 mb-3">
                  <div class="card border-warning">
                    <div class="card-body">
                      <h6 class="card-title text-warning">
                        <i class="fas fa-user me-1"></i>
                        <%= student.name %>
                      </h6>
                      <p class="card-text small text-muted mb-1">
                        <i class="fas fa-id-card me-1"></i>
                        <%= student.rollnumber %>
                      </p>
                      <p class="card-text small text-muted">
                        <i class="fas fa-envelope me-1"></i>
                        <%= student.email %>
                      </p>
                      <button class="btn btn-sm btn-outline-warning w-100" 
                              onclick="assignBooks('<%= student.rollnumber %>')">
                        <i class="fas fa-book-medical me-1"></i>
                        Assign Books
                      </button>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      <% } %>
      
      <% if (!records.some(record => record.purchase && record.purchase.length > 0)) { %>
        <div class="empty-state">
          <i class="fas fa-clipboard-list empty-icon"></i>
          <h3>No Book Issuances Found</h3>
          <p>No students have been issued any books yet. Start by assigning books to students.</p>
          <button class="btn btn-success" onclick="window.location.href='/record/view'">
            <i class="fas fa-book-medical me-2"></i> Assign Books Now
          </button>
        </div>
      <% } %>
      
    <% } else { %>
      <div class="empty-state">
        <i class="fas fa-users empty-icon"></i>
        <h3>No Student Records Found</h3>
        <p>Start by adding students to the system to begin tracking book issuances.</p>
        <button class="btn btn-success" onclick="window.location.href='/record'">
          <i class="fas fa-user-plus me-2"></i> Add First Student
        </button>
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <footer class="text-center py-4 mt-5">
    <div class="container">
      <p class="text-muted mb-0">
        <i class="fas fa-shield-alt me-2"></i>
        Students & Books Management System &copy; <%= new Date().getFullYear() %>
      </p>
    </div>
  </footer>

  <script>
    // Function to print individual student order
    function printOrder(rollnumber) {
      const originalContent = document.body.innerHTML;
      const printContent = document.querySelector(`.student-card:nth-child(${Array.from(document.querySelectorAll('.student-card')).findIndex(card => card.querySelector('.student-detail span')?.textContent === rollnumber) + 1})`).cloneNode(true);
      
      // Remove action buttons from print
      printContent.querySelector('.action-buttons').remove();
      
      document.body.innerHTML = printContent.outerHTML;
      window.print();
      document.body.innerHTML = originalContent;
      location.reload(); // Reload to restore functionality
    }

    // Function to assign more books to a student
    function assignMoreBooks(rollnumber) {
      window.location.href = `/record/view?assign=${rollnumber}`;
    }

    // Function to assign books to a student
