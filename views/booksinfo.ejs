<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Book Search - Library Catalog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #28a745 0%, #218838 100%);
      --glass-bg: rgba(255, 255, 255, 0.95);
      --shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #e4efe9 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
      padding-top: 80px;
    }

    /* Navigation */
    .navbar-glass {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      padding: 1rem 0;
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
    }

    .nav-brand {
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 1.5rem;
    }

    .nav-brand img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
      border-radius: 50%;
      object-fit: cover;
    }

    /* Hero Section */
    .hero-section {
      text-align: center;
      padding: 3rem 0;
      position: relative;
    }

    .hero-title {
      font-size: 2.8rem;
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
    }

    .hero-subtitle {
      color: #64748b;
      font-size: 1.1rem;
      max-width: 600px;
      margin: 0 auto;
    }

    /* Search Container */
    .search-container {
      max-width: 600px;
      margin: 0 auto;
      position: relative;
      z-index: 10;
    }

    .search-card {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border-radius: 25px;
      padding: 3rem;
      box-shadow: var(--shadow);
      border: 1px solid rgba(255, 255, 255, 0.2);
      transform: translateY(0);
      transition: transform 0.3s ease;
      margin-top: 2rem;
    }

    .search-card:hover {
      transform: translateY(-5px);
    }

    .search-header {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .search-icon {
      width: 80px;
      height: 80px;
      background: var(--primary-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      color: white;
      font-size: 2rem;
      box-shadow: 0 10px 30px rgba(40, 167, 69, 0.3);
    }

    .search-header h2 {
      font-size: 2rem;
      font-weight: 700;
      color: #1e293b;
      margin-bottom: 0.5rem;
    }

    .search-header p {
      color: #64748b;
      font-size: 1rem;
    }

    /* Search Form */
    .search-form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .form-label {
      font-weight: 600;
      color: #475569;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .search-input-wrapper {
      position: relative;
    }

    .search-input {
      border: 2px solid #cbd5e1;
      border-radius: 15px;
      padding: 1rem 1.25rem 1rem 3.5rem;
      font-size: 1rem;
      width: 100%;
      transition: all 0.3s ease;
      background: white;
    }

    .search-input:focus {
      border-color: #28a745;
      box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
      outline: none;
    }

    .search-input::placeholder {
      color: #94a3b8;
    }

    .search-icon-input {
      position: absolute;
      left: 1.25rem;
      top: 50%;
      transform: translateY(-50%);
      color: #28a745;
      font-size: 1.1rem;
    }

    .search-btn {
      background: var(--primary-gradient);
      color: white;
      border: none;
      padding: 1rem 2.5rem;
      border-radius: 15px;
      font-weight: 600;
      font-size: 1.1rem;
      width: 100%;
      margin-top: 1rem;
      transition: all 0.3s ease;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .search-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
    }

    .search-btn i {
      margin-right: 0.5rem;
    }

    /* Results Section */
    .result-container {
      margin-top: 2rem;
      animation: fadeIn 0.6s ease;
    }

    .result-card {
      background: linear-gradient(135deg, rgba(40, 167, 69, 0.05) 0%, rgba(33, 136, 56, 0.05) 100%);
      border-radius: 20px;
      padding: 2rem;
      border: 2px solid rgba(40, 167, 69, 0.2);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .result-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid rgba(40, 167, 69, 0.1);
    }

    .result-icon {
      width: 60px;
      height: 60px;
      background: var(--primary-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
    }

    .result-title {
      font-size: 1.8rem;
      font-weight: 700;
      color: #1e293b;
      margin-bottom: 0.25rem;
    }

    .result-subtitle {
      color: #64748b;
      font-size: 1rem;
    }

    .book-details-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 1.5rem;
    }

    .detail-item {
      background: white;
      padding: 1.25rem;
      border-radius: 15px;
      border: 1px solid #e2e8f0;
      transition: all 0.3s ease;
    }

    .detail-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .detail-label {
      font-size: 0.9rem;
      color: #64748b;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .detail-value {
      font-size: 1.25rem;
      font-weight: 700;
      color: #1e293b;
      margin: 0;
    }

    .detail-value .year-badge {
      background: var(--primary-gradient);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      font-size: 1rem;
    }

    /* No Results State */
    .no-results {
      text-align: center;
      padding: 3rem 2rem;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.9) 100%);
      border-radius: 20px;
      border: 2px dashed #cbd5e1;
      margin-top: 2rem;
    }

    .no-results-icon {
      font-size: 4rem;
      color: #cbd5e1;
      margin-bottom: 1.5rem;
    }

    .no-results h4 {
      color: #64748b;
      margin-bottom: 0.5rem;
    }

    .no-results p {
      color: #94a3b8;
      margin-bottom: 1.5rem;
    }

    /* Search Tips */
    .search-tips {
      margin-top: 2rem;
      padding: 1.5rem;
      background: rgba(40, 167, 69, 0.05);
      border-radius: 15px;
      border: 1px solid rgba(40, 167, 69, 0.1);
    }

    .search-tips h5 {
      color: #28a745;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .search-tips ul {
      margin: 0;
      padding-left: 1.5rem;
      color: #64748b;
    }

    .search-tips li {
      margin-bottom: 0.5rem;
    }

    /* Animations */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    .floating-icon {
      animation: float 3s ease-in-out infinite;
    }

    /* Responsive */
    @media (max-width: 768px) {
      body {
        padding-top: 70px;
      }
      
      .hero-title {
        font-size: 2rem;
      }
      
      .search-card {
        padding: 2rem;
        margin: 1rem;
      }
      
      .search-header h2 {
        font-size: 1.5rem;
      }
      
      .book-details-grid {
        grid-template-columns: 1fr;
      }
      
      .result-title {
        font-size: 1.5rem;
      }
    }

    /* Footer */
    .footer {
      text-align: center;
      padding: 2rem 0;
      margin-top: 3rem;
      color: #64748b;
      font-size: 0.9rem;
      border-top: 1px solid #e2e8f0;
    }
  </style>
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-glass">
    <div class="container">
      <a class="navbar-brand nav-brand d-flex align-items-center" href="/">
        <img src="/images/logo.jpg" alt="Logo">
        Students&amp;Books Management System
      </a>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <!-- Hero Section -->
    <section class="hero-section">
      <h1 class="hero-title">Find Book Details</h1>
      <p class="hero-subtitle">Search for books in our library database by title or publication year</p>
    </section>

    <!-- Search Form -->
    <div class="search-container">
      <div class="search-card">
        <div class="search-header">
          <div class="search-icon floating-icon">
            <i class="fas fa-search"></i>
          </div>
          <h2>Book Search</h2>
          <p>Enter book name or year to find detailed information</p>
        </div>
        
        <form action="/book/book-details" method="get" class="search-form">
          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-book text-success"></i>
              Book Name
            </label>
            <div class="search-input-wrapper">
              <i class="fas fa-heading search-icon-input"></i>
              <input type="text" 
                     class="search-input" 
                     name="bookName" 
                     placeholder="Enter Book Title"
                     value="<%= locals.bookName || '' %>">
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-calendar text-success"></i>
              Publication Year
            </label>
            <div class="search-input-wrapper">
              <i class="fas fa-calendar-alt search-icon-input"></i>
              <input type="number" 
                     class="search-input" 
                     name="year" 
                     placeholder="Enter Publication Year (e.g., 2020)"
                     min="1000"
                     max="<%= new Date().getFullYear() %>"
                     value="<%= locals.year || '' %>">
            </div>
          </div>

          <button type="submit" class="btn search-btn">
            <i class="fas fa-search me-2"></i>
            Search Book
          </button>
        </form>

        <!-- Search Tips -->
        <div class="search-tips">
          <h5><i class="fas fa-lightbulb"></i> Search Tips</h5>
          <ul>
            <li>You can search by book title, author, or partial title</li>
            <li>For year search, enter a 4-digit year (e.g., 2020)</li>
            <li>Leave both fields empty to see all available books</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Results Section -->
    <% if (locals.info) { %>
      <div class="result-container">
        <div class="result-card">
          <div class="result-header">
            <div class="result-icon">
              <i class="fas fa-book"></i>
            </div>
            <div>
              <h3 class="result-title">Book Found!</h3>
              <p class="result-subtitle">Here are the details for your search result</p>
            </div>
          </div>
          
          <div class="book-details-grid">
            <div class="detail-item">
              <div class="detail-label">
                <i class="fas fa-heading text-success"></i>
                Book Title
              </div>
              <p class="detail-value"><%= info.title %></p>
            </div>
            
            <div class="detail-item">
              <div class="detail-label">
                <i class="fas fa-user-edit text-success"></i>
                Author
              </div>
              <p class="detail-value"><%= info.author %></p>
            </div>
            
            <div class="detail-item">
              <div class="detail-label">
                <i class="fas fa-calendar-alt text-success"></i>
                Publication Year
              </div>
              <p class="detail-value">
                <span class="year-badge"><%= info.year %></span>
              </p>
            </div>
            
            <% if (info.isbn) { %>
              <div class="detail-item">
                <div class="detail-label">
                  <i class="fas fa-barcode text-success"></i>
                  ISBN Number
                </div>
                <p class="detail-value"><%= info.isbn %></p>
              </div>
            <% } %>
          </div>
          
          <% if (info.description) { %>
            <div class="mt-4 p-3 bg-white rounded">
              <h6 class="text-success mb-2">
                <i class="fas fa-file-alt me-2"></i>
                Description
              </h6>
              <p class="mb-0"><%= info.description %></p>
            </div>
          <% } %>
          
          <div class="mt-4 text-center">
            <button class="btn btn-outline-success me-2" onclick="window.location.href='/book'">
              <i class="fas fa-plus me-1"></i> Add Another Book
            </button>
            <button class="btn btn-success" onclick="window.location.href='/record/view'">
              <i class="fas fa-link me-1"></i> Assign to Student
            </button>
          </div>
        </div>
      </div>
    <% } else if (locals.searchPerformed) { %>
      <!-- No Results Found -->
      <div class="no-results">
        <i class="fas fa-book-open no-results-icon"></i>
        <h4>No Book Found</h4>
        <p>No books match your search criteria. Try a different search term.</p>
        <button class="btn btn-success" onclick="clearSearch()">
          <i class="fas fa-redo me-1"></i> Clear Search
        </button>
      </div>
    <% } %>
    
    <% if (locals.books && books.length > 0 && !locals.info) { %>
      <!-- Multiple Books Found -->
      <div class="result-container">
        <div class="result-card">
          <div class="result-header">
            <div class="result-icon">
              <i class="fas fa-books"></i>
            </div>
            <div>
              <h3 class="result-title"><%= books.length %> Books Found</h3>
              <p class="result-subtitle">Showing all available books in the library</p>
            </div>
          </div>
          
          <div class="row">
            <% books.forEach(function(book) { %>
              <div class="col-md-6 mb-3">
                <div class="detail-item h-100">
                  <h5 class="text-success mb-2">
                    <i class="fas fa-book me-1"></i>
                    <%= book.title %>
                  </h5>
                  <p class="text-muted mb-2">
                    <i class="fas fa-user-edit me-1"></i>
                    <%= book.author %>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <span class="badge bg-success">
                      <i class="fas fa-calendar me-1"></i>
                      <%= book.year %>
                    </span>
                    <button class="btn btn-sm btn-outline-success" 
                            onclick="window.location.href='/book/book-details?bookName=<%= encodeURIComponent(book.title) %>'">
                      <i class="fas fa-eye me-1"></i> View Details
                    </button>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <p class="mb-2">
        <i class="fas fa-shield-alt me-2"></i>
        Students&amp;Books Management System &copy; <%= new Date().getFullYear() %>
      </p>
      <p class="small text-muted">
        Search for books, manage student records, and track book assignments
      </p>
    </div>
  </footer>

  <script>
    // Focus on search input
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.querySelector('input[name="bookName"]');
      if (searchInput) {
        searchInput.focus();
      }
    });
    
    // Clear search function
    function clearSearch() {
      window.location.href = '/book/book-details';
    }
    
    // Auto-submit year if book name is empty but year is filled
    const yearInput = document.querySelector('input[name="year"]');
    if (yearInput) {
      yearInput.addEventListener('change', function() {
        const bookNameInput = document.querySelector('input[name="bookName"]');
        if (this.value && !bookNameInput.value) {
          this.form.submit();
        }
      });
    }
    
    // Add loading animation on form submit
    const searchForm = document.querySelector('form');
    if (searchForm) {
      searchForm.addEventListener('submit', function() {
        const btn = this.querySelector('.search-btn');
        if (btn) {
          btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Searching...';
          btn.disabled = true;
        }
      });
    }
    
    // Show success animation if book was found
    <!-- <% if (locals.info) { %>
      setTimeout(function() {
        const resultCard = document.querySelector('.result-card');
        if (resultCard) {
          resultCard.style.animation = 'fadeIn 0.6s ease';
        }
      }, 100);
    <% } %> -->
  </script>
</body>
</html>