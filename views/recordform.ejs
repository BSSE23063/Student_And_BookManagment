<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Student - Registration</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #28a745 0%, #218838 100%);
      --success-gradient: linear-gradient(135deg, #38f9d7 0%, #43e97b 100%);
      --glass-bg: rgba(255, 255, 255, 0.95);
      --shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    }

    body {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
      padding-top: 80px;
    }

    /* Navigation */
    .navbar-glass {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      padding: 1rem 0;
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
    }

    .nav-brand {
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 1.5rem;
    }

    .nav-brand img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
      border-radius: 50%;
      object-fit: cover;
    }

    .nav-link {
      color: #4a5568 !important;
      font-weight: 500;
      padding: 0.5rem 1rem !important;
      border-radius: 12px;
      margin: 0 0.25rem;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      background: var(--primary-gradient);
      color: white !important;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .nav-link.active {
      background: var(--primary-gradient);
      color: white !important;
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    /* Hero Section */
    .hero-section {
      text-align: center;
      margin-bottom: 3rem;
      position: relative;
      padding: 2rem 0;
    }

    .hero-section::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 300px;
      height: 300px;
      background: var(--primary-gradient);
      opacity: 0.05;
      border-radius: 50%;
      z-index: -1;
    }

    .hero-title {
      font-size: 3rem;
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
    }

    .hero-subtitle {
      color: #718096;
      font-size: 1.2rem;
      max-width: 600px;
      margin: 0 auto;
    }

    .student-icon {
      width: 100px;
      height: 100px;
      background: var(--primary-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      color: white;
      font-size: 2.5rem;
      box-shadow: 0 10px 30px rgba(40, 167, 69, 0.3);
    }

    /* Form Container */
    .form-container {
      max-width: 800px;
      margin: 0 auto;
      position: relative;
    }

    .form-card {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border-radius: 25px;
      padding: 3rem;
      box-shadow: var(--shadow);
      border: 1px solid rgba(255, 255, 255, 0.2);
      position: relative;
      overflow: hidden;
      margin-bottom: 3rem;
    }

    .form-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 5px;
      background: var(--primary-gradient);
    }

    .form-header {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .form-header h2 {
      font-size: 2.2rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 0.5rem;
    }

    .form-header p {
      color: #718096;
      font-size: 1.1rem;
    }

    /* Form Elements */
    .form-group {
      margin-bottom: 1.8rem;
    }

    .form-label {
      font-weight: 600;
      color: #4a5568;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .input-with-icon {
      position: relative;
    }

    .input-with-icon i {
      position: absolute;
      left: 1.25rem;
      top: 50%;
      transform: translateY(-50%);
      color: #28a745;
      z-index: 2;
    }

    .form-control-custom {
      border: 2px solid #e2e8f0;
      border-radius: 15px;
      padding: 1rem 1.25rem 1rem 3.5rem;
      font-size: 1rem;
      transition: all 0.3s ease;
      background: white;
      width: 100%;
    }

    .form-control-custom:focus {
      border-color: #28a745;
      box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
      transform: translateY(-2px);
    }

    .form-control-custom::placeholder {
      color: #a0aec0;
    }

    .form-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .submit-btn {
      background: var(--success-gradient);
      color: white;
      border: none;
      padding: 1rem 2.5rem;
      border-radius: 15px;
      font-weight: 600;
      font-size: 1.1rem;
      width: 100%;
      margin-top: 2rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(67, 233, 123, 0.3);
      position: relative;
      overflow: hidden;
    }

    .submit-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(67, 233, 123, 0.4);
    }

    .submit-btn::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 5px;
      height: 5px;
      background: rgba(255, 255, 255, 0.5);
      opacity: 0;
      border-radius: 100%;
      transform: scale(1, 1) translate(-50%);
      transform-origin: 50% 50%;
    }

    .submit-btn:focus:not(:active)::after {
      animation: ripple 1s ease-out;
    }

    @keyframes ripple {
      0% {
        transform: scale(0, 0);
        opacity: 0.5;
      }
      100% {
        transform: scale(50, 50);
        opacity: 0;
      }
    }

    /* Additional Information Section */
    .additional-info {
      background: rgba(40, 167, 69, 0.05);
      border-radius: 15px;
      padding: 1.5rem;
      margin-top: 2rem;
      border: 1px solid rgba(40, 167, 69, 0.1);
    }

    .additional-info h5 {
      color: #28a745;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .additional-info ul {
      margin: 0;
      padding-left: 1.5rem;
      color: #64748b;
    }

    .additional-info li {
      margin-bottom: 0.5rem;
    }

    /* Recent Students (Optional) */
    .recent-students {
      margin-top: 3rem;
    }

    .recent-students-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .recent-students-header h3 {
      font-size: 1.8rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 0.5rem;
    }

    .recent-students-header p {
      color: #718096;
    }

    .student-card {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border: 1px solid #e2e8f0;
      transition: all 0.3s ease;
    }

    .student-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    /* Form Tips */
    .form-tips {
      margin-top: 2rem;
      padding: 1.5rem;
      background: rgba(40, 167, 69, 0.05);
      border-radius: 15px;
      border: 1px solid rgba(40, 167, 69, 0.1);
    }

    .form-tips h5 {
      color: #28a745;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .form-tips ul {
      margin: 0;
      padding-left: 1.5rem;
      color: #64748b;
    }

    .form-tips li {
      margin-bottom: 0.5rem;
    }

    /* Animations */
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    .floating-icon {
      animation: float 3s ease-in-out infinite;
    }

    /* Responsive */
    @media (max-width: 768px) {
      body {
        padding-top: 70px;
      }
      
      .form-card {
        padding: 2rem;
        margin: 1rem;
      }
      
      .hero-title {
        font-size: 2.2rem;
      }
      
      .form-header h2 {
        font-size: 1.8rem;
      }
      
      .form-row {
        grid-template-columns: 1fr;
      }
    }

    /* Success Message */
    .success-message {
      display: none;
      position: fixed;
      top: 100px;
      right: 20px;
      z-index: 9999;
      animation: slideIn 0.6s ease;
      min-width: 300px;
    }
  </style>
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-glass">
    <div class="container">
      <a class="navbar-brand nav-brand d-flex align-items-center" href="/">
        <img src="/images/logo.jpg" alt="Logo">
        Students & Books Management System
      </a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-home me-1"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/record">
              <i class="fas fa-user-plus me-1"></i> Add Student
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/book">
              <i class="fas fa-book me-1"></i> Add Book
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/record/view">
              <i class="fas fa-users me-1"></i> View Students
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/record/order">
              <i class="fas fa-clipboard-list me-1"></i> View Orders
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/info">
              <i class="fas fa-search me-1"></i> Search Books
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <!-- Hero Section -->
    <div class="hero-section">
      <div class="student-icon floating-icon">
        <i class="fas fa-user-graduate"></i>
      </div>
      <h1 class="hero-title">Register New Student</h1>
      <p class="hero-subtitle">Add student information to the management system for tracking and library access</p>
    </div>

    <!-- Success Message -->
    <% if (locals.success) { %>
      <div class="alert alert-success success-message show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        Student added successfully! You can now assign books to them.
      </div>
    <% } %>

    <!-- Main Form -->
    <div class="form-container">
      <div class="form-card animate__animated animate__fadeInUp">
        <div class="form-header">
          <h2>Student Registration Form</h2>
          <p>Please provide accurate student information for registration</p>
        </div>

        <form id="studentForm" action="/record" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-user text-success"></i>
                Full Name *
              </label>
              <div class="input-with-icon">
                <i class="fas fa-user"></i>
                <input type="text" 
                       class="form-control-custom" 
                       id="name" 
                       name="name" 
                       placeholder="Enter student's full name"
                       required
                       autocomplete="name">
              </div>
              <small class="form-text text-muted mt-1">Enter the complete name as per official records</small>
            </div>

            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-envelope text-success"></i>
                Email Address *
              </label>
              <div class="input-with-icon">
                <i class="fas fa-envelope"></i>
                <input type="email" 
                       class="form-control-custom" 
                       id="email" 
                       name="email" 
                       placeholder="student@example.com"
                       required
                       autocomplete="email">
              </div>
              <small class="form-text text-muted mt-1">Valid email address for communication</small>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-id-card text-success"></i>
                Roll Number *
              </label>
              <div class="input-with-icon">
                <i class="fas fa-hashtag"></i>
                <input type="text" 
                       class="form-control-custom" 
                       id="rollnumber" 
                       name="rollnumber" 
                       placeholder="e.g., CS2024001"
                       required
                       autocomplete="off">
              </div>
              <small class="form-text text-muted mt-1">Unique identification number for the student</small>
            </div>

            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-phone text-success"></i>
                Phone Number (Optional)
              </label>
              <div class="input-with-icon">
                <i class="fas fa-mobile-alt"></i>
                <input type="tel" 
                       class="form-control-custom" 
                       id="phone" 
                       name="phone" 
                       placeholder="e.g., +1 (555) 123-4567"
                       autocomplete="tel">
              </div>
              <small class="form-text text-muted mt-1">Contact number for emergencies</small>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-graduation-cap text-success"></i>
                Department (Optional)
              </label>
              <div class="input-with-icon">
                <i class="fas fa-university"></i>
                <select class="form-control-custom" id="department" name="department">
                  <option value="" selected>Select Department</option>
                  <option value="Computer Science">Computer Science</option>
                  <option value="Electrical Engineering">Electrical Engineering</option>
                  <option value="Mechanical Engineering">Mechanical Engineering</option>
                  <option value="Business Administration">Business Administration</option>
                  <option value="Mathematics">Mathematics</option>
                  <option value="Physics">Physics</option>
                  <option value="Chemistry">Chemistry</option>
                  <option value="Biology">Biology</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              <small class="form-text text-muted mt-1">Student's academic department</small>
            </div>

            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-calendar-alt text-success"></i>
                Enrollment Date *
              </label>
              <div class="input-with-icon">
                <i class="fas fa-calendar"></i>
                <input type="date" 
                       class="form-control-custom" 
                       id="enrollmentDate" 
                       name="enrollmentDate"
                       required>
              </div>
              <small class="form-text text-muted mt-1">Date when student enrolled</small>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-map-marker-alt text-success"></i>
              Address (Optional)
            </label>
            <div class="input-with-icon">
              <i class="fas fa-home" style="top: 1.25rem;"></i>
              <textarea class="form-control-custom" 
                        id="address" 
                        name="address" 
                        rows="2"
                        placeholder="Enter student's residential address..."
                        style="resize: none;"></textarea>
            </div>
            <small class="form-text text-muted mt-1">Complete residential address</small>
          </div>

          <!-- Additional Information -->
          <div class="form-tips">
            <h5><i class="fas fa-info-circle"></i> Important Notes</h5>
            <ul>
              <li>Fields marked with * are required</li>
              <li>Email and roll number must be unique for each student</li>
              <li>You can add additional information later</li>
              <li>All information is stored securely</li>
            </ul>
          </div>

          <button type="submit" class="btn submit-btn">
            <i class="fas fa-user-plus me-2"></i>
            Register Student
          </button>
        </form>
      </div>
    </div>

    <!-- Recent Students Section (Optional) -->
    <% if (locals.recentStudents && recentStudents.length > 0) { %>
      <div class="recent-students">
        <div class="recent-students-header">
          <h3>Recently Registered Students</h3>
          <p>Students added to the system in the last 7 days</p>
        </div>
        
        <div class="row">
          <% recentStudents.forEach(function(student) { %>
            <div class="col-md-4 mb-3">
              <div class="student-card">
                <div class="d-flex align-items-start mb-2">
                  <div class="student-avatar-small me-3">
                    <div style="width: 40px; height: 40px; background: var(--primary-gradient); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600;">
                      <%= student.name.charAt(0).toUpperCase() %>
                    </div>
                  </div>
                  <div>
                    <h6 class="text-success mb-0">
                      <i class="fas fa-user me-1"></i>
                      <%= student.name %>
                    </h6>
                    <p class="text-muted small mb-1">
                      <i class="fas fa-id-card me-1"></i>
                      <%= student.rollnumber %>
                    </p>
                    <p class="text-muted small mb-0">
                      <i class="fas fa-envelope me-1"></i>
                      <%= student.email %>
                    </p>
                  </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-2">
                  <span class="badge bg-success">
                    <i class="fas fa-calendar me-1"></i>
                    <%= new Date(student.createdAt || Date.now()).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                  </span>
                  <button class="btn btn-sm btn-outline-success" 
                          onclick="window.location.href='/record/view?student=<%= student.rollnumber %>'">
                    <i class="fas fa-eye me-1"></i> View
                  </button>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Footer Note -->
    <div class="text-center mt-5">
      <p class="text-muted">
        <i class="fas fa-shield-alt me-2"></i>
        All student data is protected and encrypted. Privacy guaranteed.
      </p>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Set today's date as default for enrollment
    document.addEventListener('DOMContentLoaded', function() {
      const today = new Date();
      const formattedDate = today.toISOString().split('T')[0];
      document.getElementById('enrollmentDate').value = formattedDate;
      
      // Focus on name input
      document.getElementById('name').focus();
    });
    
    // Form validation
    document.getElementById('studentForm').addEventListener('submit', function(e) {
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const rollnumber = document.getElementById('rollnumber').value.trim();
      
      // Basic validation
      if (!name || !email || !rollnumber) {
        e.preventDefault();
        showNotification('Please fill in all required fields (*)', 'warning');
        return;
      }
      
      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        e.preventDefault();
        showNotification('Please enter a valid email address', 'warning');
        return;
      }
      
      // Roll number validation (alphanumeric)
      const rollnumberRegex = /^[a-zA-Z0-9]+$/;
      if (!rollnumberRegex.test(rollnumber)) {
        e.preventDefault();
        showNotification('Roll number should contain only letters and numbers', 'warning');
        return;
      }
      
      // Show loading state
      const submitBtn = this.querySelector('.submit-btn');
      if (submitBtn) {
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Registering Student...';
        submitBtn.disabled = true;
      }
      
      // Show success message immediately
      showNotification('Registering student...', 'info');
    });

    // Phone number formatting
    const phoneInput = document.getElementById('phone');
    if (phoneInput) {
      phoneInput.addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        if (value.length > 0) {
          value = '(' + value.substring(0, 3) + ') ' + value.substring(3, 6) + '-' + value.substring(6, 10);
        }
        e.target.value = value;
      });
    }

    // Notification function
    function showNotification(message, type) {
      // Remove existing notifications
      const existingAlerts = document.querySelectorAll('.alert.position-fixed');
      existingAlerts.forEach(alert => alert.remove());
      
      const alert = document.createElement('div');
      alert.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
      alert.style.cssText = 'top: 100px; right: 20px; z-index: 9999; min-width: 300px;';
      alert.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      `;
      document.body.appendChild(alert);
      
      setTimeout(() => {
        if (alert.parentNode) {
          alert.remove();
        }
      }, 3000);
    }

    // Auto-hide success message after 5 seconds
    const successMessage = document.querySelector('.success-message');
    if (successMessage && successMessage.classList.contains('show')) {
      setTimeout(() => {
        successMessage.style.display = 'none';
      }, 5000);
    }

    // Add animation to form
    document.addEventListener('DOMContentLoaded', function() {
      const formCard = document.querySelector('.form-card');
      if (formCard) {
        formCard.style.animation = 'slideIn 0.6s ease-out';
      }
    });
  </script>

  <!-- Animate.css for animations -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</body>
</html>