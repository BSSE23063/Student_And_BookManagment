<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Student Records</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f5f7fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar {
      background: linear-gradient(to right, #28a745, #218838);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .table-container {
      background-color: white;
      border-radius: 20px;
      padding: 30px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      margin-top: 60px;
    }

    h2 {
      color: #2f4f4f;
      margin-bottom: 30px;
    }

    th {
      background-color: #28a745 !important;
      color: white !important;
    }

    td {
      background-color: #ffffff;
    }

    .navbar-brand img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
      border-radius: 50%;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1050;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
      background-color: #fefefe;
      margin: 10% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 60%;
      border-radius: 10px;
    }

    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }

    .close:hover {
      color: black;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/logo.jpg" alt="Logo">
        Students&Books Management System
      </a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/record">Add Student Record</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/record/view">View Student Records</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container table-container">
    <h2 class="text-center">Student Records</h2>
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Roll Number</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.records && records.length > 0) { %>
          <% records.forEach(record => { %>
            <tr>
              <td><%= record.name %></td>
              <td><%= record.email %></td>
              <td><%= record.rollnumber %></td>
              <td>
                <button class="openModalBtn btn btn-success" data-id="<%= record.rollnumber %>">Add Book</button>

                <!-- Modal -->
                <div id="modal-<%= record.rollnumber %>" class="modal custom-modal">
                  <div class="modal-content">
                    <span class="close" data-id="<%= record.rollnumber %>">&times;</span>
                    <h5>Available Books</h5>
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Title</th>
                          <th>Author</th>
                          <th>Year</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (locals.books && books.length > 0) { %>
                          <% books.forEach(book => { %>
                            <tr>
                              <td><%= book.title %></td>
                              <td><%= book.author %></td>
                              <td><%= book.year %></td>
                              <td>
                                <button class="btn btn-sm btn-success"  onclick="addbook('<%= record.rollnumber %>','<%= book._id %>')">
                                Add Book
                                </button>
                              </td>
                            </tr>
                          <% }) %>
                        <% } else { %>
                          <tr><td colspan="4">No books available</td></tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-muted">No records found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script>
    // Open modal when button is clicked
    document.querySelectorAll(".openModalBtn").forEach(btn => {
      btn.addEventListener("click", function () {
        const id = btn.getAttribute("data-id");
        const modal = document.getElementById("modal-" + id);
        modal.style.display = "block";
      });
    });

    // Close modal when (x) is clicked
    document.querySelectorAll(".close").forEach(span => {
      span.addEventListener("click", function () {
        const id = span.getAttribute("data-id");
        const modal = document.getElementById("modal-" + id);
        modal.style.display = "none";
      });
    });

    // Close modal when clicking outside
    window.addEventListener("click", function (event) {
      if (event.target.classList.contains("custom-modal")) {
        event.target.style.display = "none";
      }
    });

   
    function addbook(rollnumber, bookId) {
      fetch('/record/purchase', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({rollnumber, bookId })
      })
      .then(data => {
        alert('Book added');
        console.log(data);
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error adding book.');
      });
    }
  </script>
</body>
</html>

