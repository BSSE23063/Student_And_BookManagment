<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Book - Library Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #28a745 0%, #218838 100%);
      --success-gradient: linear-gradient(135deg, #38f9d7 0%, #43e97b 100%);
      --glass-bg: rgba(255, 255, 255, 0.95);
      --shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    }

    body {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
      padding-top: 80px;
    }

    /* Navigation */
    .navbar-glass {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      padding: 1rem 0;
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
    }

    .nav-brand {
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 1.5rem;
    }

    .nav-brand img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
      border-radius: 50%;
      object-fit: cover;
    }

    .nav-link {
      color: #4a5568 !important;
      font-weight: 500;
      padding: 0.5rem 1rem !important;
      border-radius: 12px;
      margin: 0 0.25rem;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      background: var(--primary-gradient);
      color: white !important;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    /* Hero Section */
    .hero-section {
      text-align: center;
      margin-bottom: 3rem;
      position: relative;
    }

    .hero-section::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 300px;
      height: 300px;
      background: var(--primary-gradient);
      opacity: 0.05;
      border-radius: 50%;
      z-index: -1;
    }

    .hero-section h1 {
      font-size: 3rem;
      font-weight: 800;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -moz-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
    }

    .hero-section p {
      color: #718096;
      font-size: 1.2rem;
      max-width: 600px;
      margin: 0 auto;
    }

    .book-icon {
      width: 100px;
      height: 100px;
      background: var(--primary-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      color: white;
      font-size: 2.5rem;
      box-shadow: 0 10px 30px rgba(40, 167, 69, 0.3);
    }

    /* Form Container */
    .form-container {
      max-width: 800px;
      margin: 0 auto;
      position: relative;
    }

    .form-card {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border-radius: 25px;
      padding: 3rem;
      box-shadow: var(--shadow);
      border: 1px solid rgba(255, 255, 255, 0.2);
      position: relative;
      overflow: hidden;
      margin-bottom: 3rem;
    }

    .form-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 5px;
      background: var(--primary-gradient);
    }

    .form-header {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .form-header h2 {
      font-size: 2.2rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 0.5rem;
    }

    .form-header p {
      color: #718096;
      font-size: 1.1rem;
    }

    /* Form Elements */
    .form-group {
      margin-bottom: 1.8rem;
    }

    .form-label {
      font-weight: 600;
      color: #4a5568;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .input-with-icon {
      position: relative;
    }

    .input-with-icon i {
      position: absolute;
      left: 1.25rem;
      top: 50%;
      transform: translateY(-50%);
      color: #28a745;
      z-index: 2;
    }

    .form-control-custom {
      border: 2px solid #e2e8f0;
      border-radius: 15px;
      padding: 1rem 1.25rem 1rem 3.5rem;
      font-size: 1rem;
      transition: all 0.3s ease;
      background: white;
      width: 100%;
    }

    .form-control-custom:focus {
      border-color: #28a745;
      box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
      transform: translateY(-2px);
    }

    textarea.form-control-custom {
      min-height: 120px;
      resize: vertical;
    }

    .form-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .submit-btn {
      background: var(--success-gradient);
      color: white;
      border: none;
      padding: 1rem 2.5rem;
      border-radius: 15px;
      font-weight: 600;
      font-size: 1.1rem;
      width: 100%;
      margin-top: 2rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(67, 233, 123, 0.3);
      position: relative;
      overflow: hidden;
    }

    .submit-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(67, 233, 123, 0.4);
    }

    .submit-btn::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 5px;
      height: 5px;
      background: rgba(255, 255, 255, 0.5);
      opacity: 0;
      border-radius: 100%;
      transform: scale(1, 1) translate(-50%);
      transform-origin: 50% 50%;
    }

    .submit-btn:focus:not(:active)::after {
      animation: ripple 1s ease-out;
    }

    @keyframes ripple {
      0% {
        transform: scale(0, 0);
        opacity: 0.5;
      }
      100% {
        transform: scale(50, 50);
        opacity: 0;
      }
    }

    /* ISBN Generator */
    .isbn-generator {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    .isbn-generator input {
      flex: 1;
    }

    .generate-btn {
      background: var(--primary-gradient);
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s ease;
      white-space: nowrap;
      font-size: 0.9rem;
    }

    .generate-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    /* Book Categories */
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 0.75rem;
      margin-top: 0.5rem;
    }

    .category-tag {
      background: #e9ecef;
      border: 2px solid #dee2e6;
      border-radius: 50px;
      padding: 0.5rem 1rem;
      text-align: center;
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 0.9rem;
    }

    .category-tag:hover {
      background: #dee2e6;
      transform: translateY(-2px);
    }

    .category-tag.active {
      background: var(--primary-gradient);
      color: white;
      border-color: #28a745;
    }

    /* Form Tips */
    .form-tips {
      margin-top: 2rem;
      padding: 1.5rem;
      background: rgba(40, 167, 69, 0.05);
      border-radius: 15px;
      border: 1px solid rgba(40, 167, 69, 0.1);
    }

    .form-tips h5 {
      color: #28a745;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .form-tips ul {
      margin: 0;
      padding-left: 1.5rem;
      color: #64748b;
    }

    .form-tips li {
      margin-bottom: 0.5rem;
    }

    /* Recent Books */
    .recent-books {
      margin-top: 3rem;
    }

    .recent-books-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .recent-books-header h3 {
      font-size: 1.8rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 0.5rem;
    }

    .recent-books-header p {
      color: #718096;
    }

    .book-card {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border: 1px solid #e2e8f0;
      transition: all 0.3s ease;
    }

    .book-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    /* Animations */
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    .floating-icon {
      animation: float 3s ease-in-out infinite;
    }

    /* Responsive */
    @media (max-width: 768px) {
      body {
        padding-top: 70px;
      }
      
      .form-card {
        padding: 2rem;
        margin: 1rem;
      }
      
      .hero-section h1 {
        font-size: 2.2rem;
      }
      
      .form-header h2 {
        font-size: 1.8rem;
      }
      
      .form-row {
        grid-template-columns: 1fr;
      }
      
      .categories-grid {
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      }
      
      .isbn-generator {
        flex-direction: column;
      }
      
      .generate-btn {
        width: 100%;
      }
    }

    /* Success Message */
    .success-message {
      display: none;
      position: fixed;
      top: 100px;
      right: 20px;
      z-index: 9999;
      animation: slideIn 0.6s ease;
    }
  </style>
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-glass">
    <div class="container">
      <a class="navbar-brand nav-brand d-flex align-items-center" href="/">
        <img src="/images/logo.jpg" alt="Logo">
        Students & Books Management System
      </a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-home me-1"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/record">
              <i class="fas fa-user-plus me-1"></i> Add Student
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/book">
              <i class="fas fa-book me-1"></i> Add Book
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/record/view">
              <i class="fas fa-users me-1"></i> View Students
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/info">
              <i class="fas fa-search me-1"></i> Search Books
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <!-- Hero Section -->
    <div class="hero-section">
      <div class="book-icon floating-icon">
        <i class="fas fa-book-medical"></i>
      </div>
      <h1>Add New Book</h1>
      <p>Expand your library collection by adding new books to the system</p>
    </div>

    <!-- Success Message -->
    <% if (locals.success) { %>
      <div class="alert alert-success success-message show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        Book added successfully! You can now assign it to students.
      </div>
    <% } %>

    <!-- Main Form -->
    <div class="form-container">
      <div class="form-card animate__animated animate__fadeInUp">
        <div class="form-header">
          <h2>Book Information Form</h2>
          <p>Please provide complete details about the new book</p>
        </div>

        <form id="bookForm" action="/book/add" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-heading text-success"></i>
                Book Title *
              </label>
              <div class="input-with-icon">
                <i class="fas fa-book"></i>
                <input type="text" 
                       class="form-control-custom" 
                       id="title" 
                       name="title" 
                       placeholder="Enter book title"
                       required
                       oninput="generateDescriptionPlaceholder()">
              </div>
              <small class="form-text text-muted mt-1">Enter the complete title of the book</small>
            </div>

            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-user-edit text-success"></i>
                Author Name *
              </label>
              <div class="input-with-icon">
                <i class="fas fa-user"></i>
                <input type="text" 
                       class="form-control-custom" 
                       id="author" 
                       name="author" 
                       placeholder="Author's full name"
                       required>
              </div>
              <small class="form-text text-muted mt-1">Full name of the author(s)</small>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-calendar-alt text-success"></i>
                Publication Year *
              </label>
              <div class="input-with-icon">
                <i class="fas fa-calendar"></i>
                <input type="number" 
                       class="form-control-custom" 
                       id="year" 
                       name="year" 
                       placeholder="e.g., 2024"
                       min="1000"
                       max="<%= new Date().getFullYear() + 1 %>"
                       required>
              </div>
              <small class="form-text text-muted mt-1">Year the book was published</small>
            </div>

            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-barcode text-success"></i>
                ISBN Number (Optional)
              </label>
              <div class="isbn-generator">
                <div class="input-with-icon" style="flex: 1">
                  <i class="fas fa-hashtag"></i>
                  <input type="text" 
                         class="form-control-custom" 
                         id="isbn" 
                         name="isbn" 
                         placeholder="e.g., 978-3-16-148410-0">
                </div>
                <button type="button" class="generate-btn" onclick="generateISBN()">
                  <i class="fas fa-random me-1"></i> Generate
                </button>
              </div>
              <small class="form-text text-muted mt-1">Unique book identifier</small>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-layer-group text-success"></i>
              Book Category
            </label>
            <div class="categories-grid">
              <span class="category-tag" onclick="selectCategory(this, 'Computer Science')">Computer Science</span>
              <span class="category-tag" onclick="selectCategory(this, 'Mathematics')">Mathematics</span>
              <span class="category-tag" onclick="selectCategory(this, 'Physics')">Physics</span>
              <span class="category-tag" onclick="selectCategory(this, 'Chemistry')">Chemistry</span>
              <span class="category-tag" onclick="selectCategory(this, 'Biology')">Biology</span>
              <span class="category-tag" onclick="selectCategory(this, 'Engineering')">Engineering</span>
              <span class="category-tag" onclick="selectCategory(this, 'Literature')">Literature</span>
              <span class="category-tag" onclick="selectCategory(this, 'History')">History</span>
              <span class="category-tag" onclick="selectCategory(this, 'Business')">Business</span>
              <span class="category-tag" onclick="selectCategory(this, 'Other')">Other</span>
            </div>
            <input type="hidden" id="category" name="category">
            <small class="form-text text-muted mt-1">Select one category for the book</small>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-file-alt text-success"></i>
              Book Description (Optional)
            </label>
            <div class="input-with-icon">
              <i class="fas fa-align-left" style="top: 1.25rem;"></i>
              <textarea class="form-control-custom" 
                        id="description" 
                        name="description" 
                        placeholder="Provide a brief description of the book..."></textarea>
            </div>
            <small class="form-text text-muted mt-1">Brief summary or description of the book</small>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-dollar-sign text-success"></i>
                Price (Optional)
              </label>
              <div class="input-with-icon">
                <i class="fas fa-money-bill-wave"></i>
                <input type="number" 
                       class="form-control-custom" 
                       id="price" 
                       name="price" 
                       placeholder="e.g., 29.99"
                       step="0.01"
                       min="0">
              </div>
              <small class="form-text text-muted mt-1">Price in local currency</small>
            </div>

            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-copy text-success"></i>
                Number of Copies *
              </label>
              <div class="input-with-icon">
                <i class="fas fa-boxes"></i>
                <input type="number" 
                       class="form-control-custom" 
                       id="copies" 
                       name="copies" 
                       placeholder="e.g., 5"
                       min="1"
                       value="1"
                       required>
              </div>
              <small class="form-text text-muted mt-1">Total copies available in library</small>
            </div>
          </div>

          <!-- Form Tips -->
          <div class="form-tips">
            <h5><i class="fas fa-lightbulb"></i> Quick Tips</h5>
            <ul>
              <li>Fields marked with * are required</li>
              <li>You can add additional copies of the same book later</li>
              <li>Category helps in organizing and searching books</li>
              <li>ISBN can be auto-generated if you don't have one</li>
            </ul>
          </div>

          <button type="submit" class="btn submit-btn">
            <i class="fas fa-book-medical me-2"></i>
            Add Book to Library
          </button>
        </form>
      </div>
    </div>

    <!-- Recent Books Section (Optional - can be removed if not needed) -->
    <% if (locals.recentBooks && recentBooks.length > 0) { %>
      <div class="recent-books">
        <div class="recent-books-header">
          <h3>Recently Added Books</h3>
          <p>Books added to the library in the last 7 days</p>
        </div>
        
        <div class="row">
          <% recentBooks.forEach(function(book) { %>
            <div class="col-md-4 mb-3">
              <div class="book-card">
                <h5 class="text-success mb-2">
                  <i class="fas fa-book me-1"></i>
                  <%= book.title %>
                </h5>
                <p class="text-muted mb-2">
                  <i class="fas fa-user-edit me-1"></i>
                  <%= book.author %>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="badge bg-success">
                    <i class="fas fa-calendar me-1"></i>
                    <%= book.year %>
                  </span>
                  <span class="badge bg-info text-dark">
                    <i class="fas fa-copy me-1"></i>
                    <%= book.copies || 1 %> copies
                  </span>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Footer Note -->
    <div class="text-center mt-5">
      <p class="text-muted">
        <i class="fas fa-shield-alt me-2"></i>
        All book data is stored securely and can be accessed by authorized users only
      </p>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Set current year as default for publication year
    document.getElementById('year').value = new Date().getFullYear();
    
    // Generate ISBN function
    function generateISBN() {
      const prefixes = ['978', '979'];
      const prefix = prefixes[Math.floor(Math.random() * prefixes.length)];
      const group = Math.floor(Math.random() * 5) + 1;
      const publisher = Math.floor(Math.random() * 89999) + 10000;
      const title = Math.floor(Math.random() * 899) + 100;
      
      // Calculate check digit
      let isbn = prefix + '-' + group + '-' + publisher + '-' + title;
      let sum = 0;
      let digits = isbn.replace(/-/g, '').split('');
      
      for (let i = 0; i < digits.length; i++) {
        sum += (i % 2 === 0 ? 1 : 3) * parseInt(digits[i]);
      }
      
      const checkDigit = (10 - (sum % 10)) % 10;
      isbn += '-' + checkDigit;
      
      document.getElementById('isbn').value = isbn;
      
      // Show notification
      showNotification('ISBN generated successfully!', 'success');
    }

    // Category selection
    function selectCategory(element, category) {
      document.querySelectorAll('.category-tag').forEach(tag => {
        tag.classList.remove('active');
      });
      element.classList.add('active');
      document.getElementById('category').value = category;
    }

    // Generate description placeholder based on title
    function generateDescriptionPlaceholder() {
      const title = document.getElementById('title').value;
      const description = document.getElementById('description');
      
      if (title && !description.value) {
        description.placeholder = `Enter description for "${title}"...`;
      }
    }

    // Form validation
    document.getElementById('bookForm').addEventListener('submit', function(e) {
      const title = document.getElementById('title').value.trim();
      const author = document.getElementById('author').value.trim();
      const year = document.getElementById('year').value.trim();
      const copies = document.getElementById('copies').value.trim();
      
      // Basic validation
      if (!title || !author || !year || !copies) {
        e.preventDefault();
        showNotification('Please fill in all required fields (*)', 'warning');
        return;
      }
      
      const currentYear = new Date().getFullYear();
      if (parseInt(year) < 1000 || parseInt(year) > currentYear + 1) {
        e.preventDefault();
        showNotification(`Please enter a valid year between 1000 and ${currentYear + 1}`, 'warning');
        return;
      }
      
      if (parseInt(copies) < 1) {
        e.preventDefault();
        showNotification('Please enter at least 1 copy', 'warning');
        return;
      }
      
      // Show loading state
      const submitBtn = this.querySelector('.submit-btn');
      if (submitBtn) {
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Adding Book...';
        submitBtn.disabled = true;
      }
      
      // Show success message immediately
      showNotification('Adding book to library...', 'info');
    });

    // Notification function
    function showNotification(message, type) {
      // Remove existing notifications
      const existingAlerts = document.querySelectorAll('.alert.position-fixed');
      existingAlerts.forEach(alert => alert.remove());
      
      const alert = document.createElement('div');
      alert.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
      alert.style.cssText = 'top: 100px; right: 20px; z-index: 9999; min-width: 300px;';
      alert.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      `;
      document.body.appendChild(alert);
      
      setTimeout(() => {
        if (alert.parentNode) {
          alert.remove();
        }
      }, 3000);
    }

    // Auto-hide success message after 5 seconds
    const successMessage = document.querySelector('.success-message');
    if (successMessage) {
      setTimeout(() => {
        successMessage.style.display = 'none';
      }, 5000);
    }

    // Add animation to form
    document.addEventListener('DOMContentLoaded', function() {
      const formCard = document.querySelector('.form-card');
      if (formCard) {
        formCard.style.animation = 'slideIn 0.6s ease-out';
      }
    });
  </script>

  <!-- Animate.css for animations -->
